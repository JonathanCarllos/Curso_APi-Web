@model IEnumerable<VShop.Web.Models.ProductViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Products</h2>
        <a asp-action="CreateProduct" class="btn btn-primary">
            <span class="fas fa-plus"></span> New Product
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Product List</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-bordered mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th class="text-end">@Html.DisplayNameFor(model => model.Price)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No products available</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td class="text-end">@Html.DisplayFor(modelItem => item.Price)</td>
                                <td class="text-center">
                                    <a asp-action="UpdateProduct" asp-route-id="@item.ProductId" title="Edit" class="btn btn-sm btn-warning mx-1">
                                        <span class="fas fa-edit"></span>
                                    </a>
                                    <a asp-action="DeleteProduct" asp-route-id="@item.ProductId" title="Delete" class="btn btn-sm btn-danger mx-1">
                                        <span class="fas fa-trash-alt"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>